<h1>Recent Reviews</h1>
<style>
  .grid {
    display: flex;
    flex-wrap: wrap;
    gap: 20px;
    padding: 0;
    list-style: none;
  }

  .card {
    background-color: #f9f9f9;
    border: 1px solid #ddd;
    border-radius: 10px;
    padding: 15px;
    width: 300px;
  }

  .card img {
    width: 100%;
    height: 300px;
    object-fit: cover;
    border-radius: 6px;
    margin-bottom: 10px;
  }

  .card h2 {
    margin: 0 0 5px;
    font-size: 1.2rem;
  }

  .card p {
    margin: 4px 0;
  }
</style>

<ul class="grid">
  {{#each books}}
    {{#each reviews}}
      <li class="card">
        <img src="{{../image_url}}" alt="Book cover">
        <h2>{{../title}}</h2>
        <p><strong>Author:</strong> {{../author}}</p>
        <p><strong>Description</strong> {{../description}}</p>
        <p><strong>Genre:</strong> {{../genre}}</p>
        <p><strong>Rating:</strong> {{../rating}} / 5</p>
        <a href="/books/{{../book_id}}">View Details</a>
      </li>
    {{/each}}
  {{/each}}
</ul>
